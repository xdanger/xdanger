{
  // 完全开启/关闭 AutoCorrect，默认：true
  "autocorrect.enable": true,
  // 开启/关闭 AutoCorrect Lint 检查，默认：true
  "autocorrect.enableLint": true,
  // 是否启用 formatOnSave，默认：true
  "autocorrect.formatOnSave": true,
  // 对于通用文件是否启用 formatOnSave，默认：false
  "editor.formatOnSave": true,
  "files.associations": {
    "*.mdx": "mdx"
  },
  "ruff.nativeServer": "on",
  "typescript.tsdk": "node_modules/typescript/lib",
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "[markdown][mdx][astro-markdown][javascript][json][typescript][astro-typescript]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[mdx]": {
    "editor.defaultFormatter": "unifiedjs.vscode-mdx"
  },
  "[javascript][typescript][astro-typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  }
}
