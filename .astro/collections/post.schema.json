{
  "$ref": "#/definitions/post",
  "definitions": {
    "post": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "maxLength": 60
        },
        "description": {
          "type": "string"
        },
        "coverImage": {
          "type": "object",
          "properties": {
            "alt": {
              "type": "string"
            },
            "src": {
              "type": "string"
            }
          },
          "required": [
            "alt",
            "src"
          ],
          "additionalProperties": false
        },
        "draft": {
          "type": "boolean",
          "default": false
        },
        "ogImage": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "publishDate": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "anyOf": [
                {
                  "type": "string",
                  "format": "date-time"
                },
                {
                  "type": "string",
                  "format": "date"
                },
                {
                  "type": "integer",
                  "format": "unix-time"
                }
              ]
            }
          ]
        },
        "updatedDate": {
          "type": "string"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "description",
        "publishDate"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}