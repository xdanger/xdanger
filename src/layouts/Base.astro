---
import BaseHead from "@/components/BaseHead.astro";
import SkipLink from "@/components/SkipLink.astro";
import ThemeProvider from "@/components/ThemeProvider.astro";
import Footer from "@/components/layout/Footer.astro";
import Header from "@/components/layout/Header.astro";
import { siteConfig } from "@/site.config";
import "@fontsource/ia-writer-mono";
import Analytics from "@vercel/analytics/astro";

const {
  meta: { articleDate, description = siteConfig.description, ogImage, title, post },
} = Astro.props;
---

<html class="scroll-smooth" lang={siteConfig.lang}>
  <head>
    <BaseHead articleDate={articleDate} description={description} ogImage={ogImage} title={title} post={post} />
  </head>
  <body class="overscroll-none dark:scrollbar-thumb-gray-700 bg-background font-mono antialiased">
    <div class="flex flex-col min-h-svh min-w-svw text-foreground text-sm text-offgray dark:text-offgray-300">
      <ThemeProvider />
      <SkipLink />
      <Header />
      <main id="main" class="flex flex-grow flex-col pt-24 border-grid">
        <slot />
      </main>
      <Footer />
    </div>
    <!-- Overlay vertical borders for entire page (another approach) -->
    <div class="fixed inset-0 pointer-events-none" style="z-index: 5">
      <div class="max-w-4xl h-full mx-auto border-l border-r border-dashed border-gray-200 dark:border-gray-700"></div>
    </div>
    <Analytics />
  </body>
</html>
